<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9F8F8"
    tools:context=".View.CadastroTreino">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btCadastraAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Cadastrar atividade"
        app:backgroundTint="@color/design_default_color_secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.87" />

    <EditText
        android:id="@+id/taNomeTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome do treino"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.026" />

    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="575dp"
        android:orientation="vertical"
        android:padding="55dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp">

        <ListView
            android:id="@+id/listCadastroTreino"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_marginTop="110dp"
            android:animationCache="false"
            android:choiceMode="multipleChoice"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            android:padding="10dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btSalvarTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:backgroundTint="@color/design_default_color_secondary_variant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCadastraAtividade" />

</androidx.constraintlayout.widget.ConstraintLayout>